<%- include('partials/header.ejs'); %>

<h2>Edit Page</h2>

<% if (locals.book) {%>
    <h3>Book contents here</h3>

    <form action="/books/<%= book.id %>/edit?_method=PUT" method="POST">
        <label> Title: </label>
        <input type="text" name="title" value="<%= book.title %>" readonly>
    
        <label> Author: </label>
        <input type="text" name="author" value="<%= book.author %>" readonly>
    
        <label> ISBN: </label>
        <input type="text" name="isbn" value="<%= book.isbn %>" readonly>
    
        <label> Date Read: </label>
        <input type="date" name="date_read" value="<%= book.date_read %>">
    
        <label> Rating (out of 10): </label>
        <input type="number" name="rating" min="1" max="10" value="<%= book.rating %>">
    
        <label> Notes: </label>
        <textarea name="notes"><%= book.notes %></textarea>
    
        <button type="submit"> Update Book </button>
    
    </form>

<% } %>

<%- include('partials/footer.ejs'); %>